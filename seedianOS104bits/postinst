# Get user with uid 1000 and Test for symlink on desktop
if [ ! -L "/home/$(awk -v val=1000 -F ":" '$3==val{print $1}' /etc/passwd)/Desktop/seedianOS104" ]; then
   ln -s /usr/share/doc/seedianOS104 /home/$(awk -v val=1000 -F ":" '$3==val{print $1}' /etc/passwd)/Desktop/
fi
